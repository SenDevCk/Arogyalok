<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/proxima_nova_soft_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="Book Appointment"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:text="Patient Name"
                    android:textColor="#D0322B2B"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_btn_curved_square"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:hint="Enter Patient Name"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/textview_color"
                    android:textColorHint="@color/textview_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:layout_marginTop="20dp"
                    android:text="Mobile Number"
                    android:textColor="#D0322B2B"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_btn_curved_square"
                    android:fontFamily="@font/proxima_nova_soft_regular"                    android:hint="Enter Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/textview_color"
                    android:textColorHint="@color/textview_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:layout_marginTop="20dp"
                    android:text="Email Id"
                    android:textColor="#D0322B2B"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_btn_curved_square"
                    android:fontFamily="@font/proxima_nova_soft_regular"                    android:hint="Enter Email Id"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/textview_color"
                    android:textColorHint="@color/textview_color" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:text="City"
                    android:layout_marginTop="20dp"
                    android:textColor="#D0322B2B"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/user_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_btn_curved_square"
                    android:fontFamily="@font/proxima_nova_soft_regular"                    android:hint="Enter City"
                    android:inputType="textAutoComplete"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/textview_color"
                    android:textColorHint="@color/textview_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:text="Appointment Date"
                    android:layout_marginTop="20dp"
                    android:textColor="#D0322B2B"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_btn_curved_square"
                    android:fontFamily="@font/proxima_nova_soft_regular"                    android:hint="Enter Appointment Date"
                    android:inputType="textAutoComplete"
                    android:focusable="false"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/textview_color"
                    android:textColorHint="@color/textview_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:text="Specialization"
                    android:layout_marginTop="20dp"
                    android:textColor="#D0322B2B"
                    android:textSize="15dp" />

                <AutoCompleteTextView
                    android:id="@+id/specialization"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    android:background="@drawable/bg_btn_curved_square"
                    android:fontFamily="@font/proxima_nova_soft_regular"                    android:hint="Choose specialization"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/textview_color"
                    android:textColorHint="@color/textview_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:text="Enquiry"
                    android:textColor="#D0322B2B"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/enquiry"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:background="@drawable/bg_btn_curved_square"
                    android:fontFamily="@font/proxima_nova_soft_regular"                    android:inputType="textAutoComplete"
                    android:maxLines="5"
                    android:padding="10dp"
                    android:textColor="@color/textview_color"
                    android:textColorHint="@color/textview_color" />

                <Button
                    android:id="@+id/book_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_btn"
                    android:fontFamily="@font/proxima_nova_soft_regular"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>